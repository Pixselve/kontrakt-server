generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "node_modules/typegraphql-prisma/generator.js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_DEV")
}

model Contract {
  end   DateTime
  id    Int      @default(autoincrement()) @id
  name  String
  start DateTime
  Skill Skill[]
  Group Group[]  @relation("GroupToContract", references: [id])
}

model Group {
  id       Int        @default(autoincrement()) @id
  name     String     @unique
  Contract Contract[] @relation("GroupToContract", references: [id])
  Student  Student[]  @relation("StudentToGroup", references: [id])
}

model Mark {
  rgb            String
  text           String
  value          String           @id
  SkillToStudent SkillToStudent[]
}

model Skill {
  contractId     Int
  id             Int              @default(autoincrement()) @id
  name           String
  Contract       Contract         @relation(fields: [contractId], references: [id])
  SkillToStudent SkillToStudent[]
}

model SkillToStudent {
  markValue String
  skillId   Int
  studentId Int
  Mark      Mark    @relation(fields: [markValue], references: [value])
  Skill     Skill   @relation(fields: [skillId], references: [id])
  Student   Student @relation(fields: [studentId], references: [id])

  @@id([studentId, markValue, skillId])
}

model Student {
  firstName      String
  id             Int              @default(autoincrement()) @id
  lastName       String
  username       Int              @unique
  SkillToStudent SkillToStudent[]
  Group          Group[]          @relation("StudentToGroup", references: [id])
}

model Teacher {
  email    String @id
  password String
}