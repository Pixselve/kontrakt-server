generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "node_modules/typegraphql-prisma/generator.js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Color {
  id          Int           @default(autoincrement()) @id
  name        String
  rgb         String
  skillStatuses SkillStatus[]
}

model Contract {
  date  DateTime
  id    Int      @default(autoincrement()) @id
  skills Skill[]
}

model Skill {
  contractId     Int
  id             Int              @default(autoincrement()) @id
  name           String
  contract       Contract         @relation(fields: [contractId], references: [id])
  skillToStudents SkillToStudent[]
}

model SkillStatus {
  colorId Int
  id      Int    @default(autoincrement()) @id
  mark    Mark
  text    String
  color   Color  @relation(fields: [colorId], references: [id])
}

model SkillToStudent {
  id        Int     @default(autoincrement()) @id
  mark      Mark    @default(dbgenerated())
  skillId   Int
  studentId Int
  skill     Skill   @relation(fields: [skillId], references: [id])
  student   Student @relation(fields: [studentId], references: [id])
}

model Student {
  firstName      String
  id             Int              @default(autoincrement()) @id
  lastName       String
  username       Int              @unique
  skillsToStudent SkillToStudent[]
}

model Teacher {
  email    String @id
  password String
}

enum Mark {
  AWAITING_CORRECTION
  BLUE
  GREEN
  MARKED
  ORANGE
  RED
  TODO
  TO_FINISH
}
